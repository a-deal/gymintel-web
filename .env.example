# GymIntel Web Environment Variables
# Copy this to .env and fill in your values

# API Keys (optional for basic development)
YELP_API_KEY=your-yelp-api-key-here
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Mapbox (optional - maps will show fallback without token)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here

# Database - Docker (recommended)
DATABASE_URL=postgresql://gymintel:gymintel_dev@database:5432/gymintel  # pragma: allowlist secret

# Database - Local development (alternative)
# DATABASE_URL=postgresql://gymintel:gymintel_dev@localhost:5432/gymintel  # pragma: allowlist secret

# Test Database Configuration
TEST_DATABASE_URL=postgresql://gymintel_test:gymintel_test@localhost:5432/test_gymintel  # pragma: allowlist secret

# Environment
ENVIRONMENT=development
