# Production Environment Configuration
# Copy this to .env.production and update with secure values

# Database Configuration (use strong passwords!)
DATABASE_HOST=your-production-db-host
DATABASE_PORT=5432
DATABASE_NAME=gymintel_prod
DATABASE_USER=gymintel_prod
DATABASE_PASSWORD=use-a-strong-password-here

# API Keys (required for production)
YELP_API_KEY=your-production-yelp-key
GOOGLE_PLACES_API_KEY=your-production-google-key
MAPBOX_ACCESS_TOKEN=your-production-mapbox-token

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate-a-secure-secret-key
JWT_SECRET_KEY=generate-another-secure-key

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379/0

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
